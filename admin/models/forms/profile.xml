<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>

		<field name="name" type="text" class="inputbox" 
			size="40"  
			label="COM_SOCIALCOMMUNITY_NAME" 
			filter="trim" 
			description="COM_SOCIALCOMMUNITY_NAME_DESC" 
			required="true" />

        <field
	        name="alias"
	        type="text"
	        label="JFIELD_ALIAS_LABEL"
	        description="JFIELD_ALIAS_DESC"
	        class="inputbox"
	        size="40"/>
            
		
		<field name="id" type="text" default="0" label="JGLOBAL_FIELD_ID_LABEL" 
            readonly="true" class="readonly"
            description="JGLOBAL_FIELD_ID_DESC" />

        <field name="bio" type="textarea" 
            class="inputbox"
            rows="10" 
            label="COM_SOCIALCOMMUNITY_BIO" description="COM_SOCIALCOMMUNITY_BIO_DESC" 
            />
            
	</fieldset>
</form>