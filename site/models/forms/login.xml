<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset name="credentials" label="COM_SOCIALCOMMUNITY_LOGIN_DEFAULT_LABEL">
		<field
			name="username"
			type="text"
			labelclass="col-sm-2 control-label"
			class="validate-username col-sm-10 form-control"
			filter="username"
			label="COM_SOCIALCOMMUNITY_LOGIN_USERNAME_LABEL"
			required="true"
			validate="username"
			autofocus="true"
		/>

		<field
			name="password"
			type="password"
			labelclass="col-sm-2 control-label"
			class="validate-password col-sm-10 form-control"
			required="true"
			filter="raw"
			label="JGLOBAL_PASSWORD"
		/>
		</fieldset>
</form>
